---
- name: nginx installation
  hosts: web
  become: true
  tasks:
    - name: installing nginx
      yum:
        name: nginx
        state: present

    - name: starting nginx
      service:
        name: nginx
        state: started

    - name: enable
      service:
        name: nginx
        enabled: yes
- name: nginx uninstallation

  hosts: web
  become: true
  tasks:

    - name: stoping nginx
      service:
        name: nginx
        state: stopped

    - name: remove nginx
      yum:
        name: nginx
        state: absent
- name: installing git
  hosts: web
  become: true
  tasks:

    - name: git installation
      ansible.builtin.package:
        name: git
        state: present

    - name: git uninstallation
      ansible.builtin.package:
        name: git
        state: absent


     

